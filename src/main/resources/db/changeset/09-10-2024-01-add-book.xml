<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="09-10-2024-01-add-book" author="Artur Leshchenko">
        <createTable tableName="books" remarks="Table of books">
            <column name="id" type="bigint" remarks="Id of book" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="text" remarks="title of book">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="bigint" remarks="id of author">
                <constraints nullable="false" foreignKeyName="book_author_id_author_id_fk" references="author(id)"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>